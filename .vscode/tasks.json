{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build host",
			"type": "process",
			"command": "haxe",
			"args": [
				"cppia_host.hxml"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		},
		{
			"label": "Build sample",
			"type": "process",
			"command": "haxe",
			"args": [
				"sample.hxml"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		},
		{
			"label": "Run sample",
			"type": "process",
			"command": "./build/cppia_host/CppiaHost-debug",
			"args": [
				"build/sample.cppia"
			],
			"problemMatcher": [],
			"dependsOn": "Build sample",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Pretask for Generate documentation",
			"type": "process",
			"command": "haxe",
			"args": [
				"cppia_host.hxml",
				"-xml",
				"documentation/hxglfw.xml",
				"-D",
				"no-compilation"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		},
		{
			"label": "Generate documentation",
			"type": "process",
			"command": "haxelib",
			"args": [
				"run",
				"dox",
				"-o",
				"documentation/out/",
				"-i",
				"documentation/hxglfw.xml",
				"-in",
				"glfw",
				"--title",
				"hxglfw API reference",
				"--toplevel-package",
				"glfw",
				"--keep-field-order",
				"-D",
				"version",
				"0.0.1",
				"-D",
				"source-path",
				"https://github.com/ibilon/hxglfw/blob/master/",
				"-D",
				"website",
				"https://github.com/ibilon/hxglfw",
				"-D",
				"description",
				"hxglfw is a work in progress haxe/hxcpp wrapper around GLFW"
			],
			"problemMatcher": [],
			"dependsOn": "Pretask for Generate documentation"
		}
	]
}
